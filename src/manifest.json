{
  "manifest_version": 2,

  "name": "MyIp",
  "description": "Know your IP",
  "version": "1.0.0",

  "browser_action": {
    "default_title": "Get my IP!",
    "default_popup": "popup.html"
  },

  "permissions": [
     "clipboardWrite",
     "http://codiceloco.altervista.org/"
  ],

  "icons": {
    "16": "media/icon16.png",
    "32": "media/icon32.png",
    "48": "media/icon48.png",
    "64": "media/icon64.png",
    "128": "media/icon128.png",
    "512": "media/icon512.png"
  }
}
